{
	"name": "liquiddesign/rest-router",
	"description": "Nette router, presenter a responses pro REST API",
	"license": "MIT",
	"autoload": {
		"psr-4": {"REST\\": "src/"},
		"classmap": []
	},
	"require" :
	{
		"php":">=7.4",
		"nette/routing": "^3.0",
		"nette/http": "^3.0",
		"nette/application": "^3.0",
		"nette/security": "^3.0",
		"liquiddesign/datalist": "@dev",
		"ext-json": "*"
	},
	"require-dev": 
	{
		"nette/tester":"*",
		"composer/composer": "*",
		"liquiddesign/codestyle": "@dev",
		"phpstan/phpstan": "*",
		"tracy/tracy":"*"
	},
	"scripts": {
		"phpstan": "phpstan analyse --memory-limit 1G -c phpstan.neon",
		"phpcs": "phpcs --standard=ruleset.xml --ignore=assets src",
		"phpcsfix": "phpcbf --standard=ruleset.xml --ignore=assets src"
	}
}